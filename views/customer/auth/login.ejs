<%- include('../../shared/includes/head.ejs', {pageTitle: "Meeseeks | Login"}) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header.ejs') %>
  <main>
    <h1>Login</h1>
    <% if(inputData.errorMessage) { %> 
      <section class="alert">
        <h2>Invalid Credentials</h2>
        <p><%= inputData.errorMessage %></p>
      </section>
    <% } %> 
    <form action="/login" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
      <p>
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="something@anything.com"
          value="<%= inputData.email %>"
          required
        />
      </p>
      <p>
        <label for="password">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="********"
          value="<%= inputData.password %>"
          required
        />
      </p>
      <button class="btn">Login</button>
      <p id="switch-form"><a href="/signup">Create New User</a></p>
    </form>
    <%- include('../../shared/includes/footer.ejs') %>
  </main>
</body>
